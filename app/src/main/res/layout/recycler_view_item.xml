<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewRecyclerItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"

        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/titleRecyclerItem"
        android:layout_toRightOf="@id/imageViewRecyclerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/priceRecyclerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewRecyclerItem"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:layout_below="@id/titleRecyclerItem"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:padding="5dp"/>

    <CheckBox
        android:id="@+id/checkBoxRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/priceRecyclerItem"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        android:layout_toRightOf="@id/imageViewRecyclerItem"

         />

</RelativeLayout>